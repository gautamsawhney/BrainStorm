<table border = "3">
<tr>
<th> Position </th>
<th> Username </th>
<th> College  </th>
<th> Score    </th>
</tr>

<% @users.each_with_index do |user, index| %>
  <tr>
      <% if @page %>
        <td> <%= (50 * @page.to_i) + index + 1 %> </td>
      <% else  %>
        <td> <%= index + 1 %> </td>
        <td> <%= user.user_name %> </td>
        <td> <%= user.college %> </td>
        <td> <%= user.score - 1 %> </td>
        <% end %>
       <% end %>
   </tr>
       </table> 

    <%= will_paginate @users %>